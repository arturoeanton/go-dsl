{
  "name": "motor-contable-demo-automation",
  "version": "1.0.0",
  "description": "Automatizaci√≥n con Playwright para demostrar el Motor Contable con go-dsl",
  "main": "demo.js",
  "type": "module",
  "scripts": {
    "test": "npx playwright test",
    "demo": "npx playwright test demo.spec.js --headed --reporter=list",
    "demo:fast": "npx playwright test demo.spec.js --headed --reporter=list --project=chromium",
    "demo:video": "npx playwright test demo.spec.js --video=on --reporter=html",
    "demo:simple": "npx playwright test demo-simple.spec.js --headed --reporter=list --project=chromium",
    "demo:dsl": "npx playwright test demo-dsl.spec.js --headed --reporter=list --project=chromium",
    "demo:visual": "npx playwright test demo-visual.spec.js --headed --reporter=list --project=chromium --workers=1",
    "demo:pos": "npx playwright test demo-pos-real.spec.js --headed --reporter=list --project=chromium --workers=1",
    "demo:full": "npx playwright test demo-completa.spec.js --headed --reporter=list --project=chromium --workers=1",
    "demo": "npx playwright test demo-fixed.spec.js --headed --reporter=list --project=chromium --workers=1",
    "demo:complete": "npx playwright test demo-completa-dsl.spec.js --headed --reporter=list --project=chromium --workers=1",
    "demo:final": "npx playwright test demo-completa-dsl-fixed.spec.js --headed --reporter=list --project=chromium --workers=1",
    "install:browsers": "npx playwright install"
  },
  "keywords": [
    "playwright",
    "automation",
    "accounting",
    "go-dsl",
    "demo"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0"
  },
  "dependencies": {
    "chalk": "^5.3.0"
  }
}