# Test de verificación de características

print "=== TEST WHILE LOOP ==="
set $count 0
while $count < 3 do
    set $count $count + 1
    print "While iteration: $count"
endloop
print "✅ While loop works!"

print ""
print "=== TEST FOREACH LOOP ==="
foreach $item in ["apple", "banana", "orange"] do
    print "Item: $item"
endloop
print "✅ Foreach loop works!"

print ""
print "=== TEST REPEAT LOOP ==="
repeat 3 times do
    print "Repeat iteration"
endloop
print "✅ Repeat loop works!"

